<?xml version="1.0" encoding="UTF-8"?>
<project name="net.sourceforge.pmd.core" default="build.jars" basedir=".">

	<property name="basews" value="${ws}"/>
	<property name="baseos" value="${os}"/>
	<property name="basearch" value="${arch}"/>
	<property name="basenl" value="${nl}"/>
	<property name="bundleId" value="net.sourceforge.pmd.core"/>
	<property name="bundleVersion" value="4.2.3.v200809021135"/>

	<!-- Compiler settings. -->
	<property name="javacFailOnError" value="false"/>
	<property name="javacDebugInfo" value="on"/>
	<property name="javacVerbose" value="false"/>
	<property name="logExtension" value=".log"/>
	<property name="compilerArg" value=""/>
	<property name="javacSource" value="1.3"/>
	<property name="javacTarget" value="1.2"/>
	<condition property="dir_bootclasspath" value="${java.home}/../Classes">
		<os family="mac"/>
	</condition>
	<property name="dir_bootclasspath" value="${java.home}/lib"/>
	<path id="path_bootclasspath">
		<fileset dir="${dir_bootclasspath}">
			<include name="*.jar"/>
		</fileset>
	</path>
	<property name="bootclasspath" refid="path_bootclasspath"/>
	<property name="bundleJavacSource" value="${javacSource}"/>
	<property name="bundleJavacTarget" value="${javacTarget}"/>
	<property name="bundleBootClasspath" value="${bootclasspath}"/>

	<target name="init" depends="properties">
<condition property="pluginTemp" value="${buildTempFolder}/plugins"		>
			<isset property="buildTempFolder"/>
		</condition>
		<property name="pluginTemp" value="${basedir}"/>
<condition property="build.result.folder" value="${pluginTemp}/net.sourceforge.pmd.core_4.2.3.v200809021135"		>
			<isset property="buildTempFolder"/>
		</condition>
		<property name="build.result.folder" value="${basedir}"/>
		<property name="temp.folder" value="${basedir}/temp.folder"/>
		<property name="plugin.destination" value="${basedir}"/>
	</target>

	<target name="properties" if="eclipse.running">
		<property name="build.compiler" value="org.eclipse.jdt.core.JDTCompilerAdapter"/>

	</target>

	<target name="build.update.jar" depends="init" description="Build the plug-in: net.sourceforge.pmd.core for an update site.">
		<delete dir="${temp.folder}"/>
		<mkdir dir="${temp.folder}"/>
		<antcall target="build.jars"/>
		<antcall target="gather.bin.parts">
			<param name="destination.temp.folder" value="${temp.folder}/"/>
		</antcall>
		<jar destfile="${plugin.destination}/net.sourceforge.pmd.core_4.2.3.v200809021135.jar" basedir="${temp.folder}/net.sourceforge.pmd.core_4.2.3.v200809021135" filesetmanifest="merge"/>
		<delete dir="${temp.folder}"/>
	</target>

	<target name="pmd-core.jar" depends="init" unless="pmd-core.jar" description="Create jar: net.sourceforge.pmd.core pmd-core.jar.">
		<delete dir="${temp.folder}/pmd-core.jar.bin"/>
		<mkdir dir="${temp.folder}/pmd-core.jar.bin"/>
		<path id="pmd-core.jar.classpath">
			<pathelement path="../../../../../../../usr/java/eclipse/plugins/org.eclipse.core.runtime_3.4.0.v20080512.jar"/>
			<pathelement path="../../../../../../../usr/java/eclipse/plugins/org.eclipse.osgi_3.4.0.v20080605-1900.jar"/>
			<pathelement path="../../../../../../../usr/java/eclipse/plugins/org.eclipse.equinox.common_3.4.0.v20080421-2006.jar"/>
			<pathelement path="../../../../../../../usr/java/eclipse/plugins/org.eclipse.core.jobs_3.4.0.v20080512.jar"/>
			<pathelement path="../../../../../../../usr/java/eclipse/plugins/org.eclipse.core.runtime.compatibility.registry_3.2.200.v20080610/runtime_registry_compatibility.jar"/>
			<pathelement path="../../../../../../../usr/java/eclipse/plugins/org.eclipse.core.runtime.compatibility.registry_3.2.200.v20080610"/>
			<pathelement path="../../../../../../../usr/java/eclipse/plugins/org.eclipse.equinox.registry_3.4.0.v20080516-0950.jar"/>
			<pathelement path="../../../../../../../usr/java/eclipse/plugins/org.eclipse.equinox.preferences_3.2.200.v20080421-2006.jar"/>
			<pathelement path="../../../../../../../usr/java/eclipse/plugins/org.eclipse.core.runtime.compatibility.registry_3.2.200.v20080610/@dot"/>
			<pathelement path="../../../../../../../usr/java/eclipse/plugins/org.eclipse.core.contenttype_3.3.0.v20080604-1400.jar"/>
			<pathelement path="../../../../../../../usr/java/eclipse/plugins/org.eclipse.core.runtime.compatibility.auth_3.2.100.v20070502.jar"/>
			<pathelement path="../../../../../../../usr/java/eclipse/plugins/org.eclipse.equinox.app_1.1.0.v20080421-2006.jar"/>
			<pathelement path="../../../../../../../usr/java/eclipse/plugins/org.eclipse.osgi.services_3.1.200.v20071203.jar"/>
			<pathelement path="../../../../../../../usr/java/eclipse/plugins/javax.servlet_2.4.0.v200806031604.jar"/>
			<pathelement path="lib/pmd14-4.2.3.jar"/>
			<pathelement path="${build.result.folder}/../net.sourceforge.pmd.core_4.2.3.v200809021135/lib/pmd14-4.2.3.jar"/>
			<pathelement path="lib/retroweaver-rt-2.0.5.jar"/>
			<pathelement path="${build.result.folder}/../net.sourceforge.pmd.core_4.2.3.v200809021135/lib/retroweaver-rt-2.0.5.jar"/>
			<pathelement path="lib/asm-3.1.jar"/>
			<pathelement path="${build.result.folder}/../net.sourceforge.pmd.core_4.2.3.v200809021135/lib/asm-3.1.jar"/>
			<pathelement path="lib/jaxen-1.1.1.jar"/>
			<pathelement path="${build.result.folder}/../net.sourceforge.pmd.core_4.2.3.v200809021135/lib/jaxen-1.1.1.jar"/>
			<pathelement path="lib/junit.jar"/>
			<pathelement path="${build.result.folder}/../net.sourceforge.pmd.core_4.2.3.v200809021135/lib/junit.jar"/>
			<pathelement path="lib/backport-util-concurrent.jar"/>
			<pathelement path="${build.result.folder}/../net.sourceforge.pmd.core_4.2.3.v200809021135/lib/backport-util-concurrent.jar"/>
			<pathelement path="lib/xercesImpl-2.6.2.jar"/>
			<pathelement path="${build.result.folder}/../net.sourceforge.pmd.core_4.2.3.v200809021135/lib/xercesImpl-2.6.2.jar"/>
			<pathelement path="lib/xmlParserAPIs-2.6.2.jar"/>
			<pathelement path="${build.result.folder}/../net.sourceforge.pmd.core_4.2.3.v200809021135/lib/xmlParserAPIs-2.6.2.jar"/>
			<pathelement path="lib/castor-1.1.2.1-xml.jar"/>
			<pathelement path="${build.result.folder}/../net.sourceforge.pmd.core_4.2.3.v200809021135/lib/castor-1.1.2.1-xml.jar"/>
			<pathelement path="lib/log4j-1.2.15.jar"/>
			<pathelement path="${build.result.folder}/../net.sourceforge.pmd.core_4.2.3.v200809021135/lib/log4j-1.2.15.jar"/>
			<pathelement path="lib/commons-logging-1.1.1.jar"/>
			<pathelement path="${build.result.folder}/../net.sourceforge.pmd.core_4.2.3.v200809021135/lib/commons-logging-1.1.1.jar"/>
		</path>
		<!-- compile the source code -->
		<javac destdir="${temp.folder}/pmd-core.jar.bin" failonerror="${javacFailOnError}" verbose="${javacVerbose}" debug="${javacDebugInfo}" includeAntRuntime="no" bootclasspath="${bundleBootClasspath}" source="${bundleJavacSource}" target="${bundleJavacTarget}"		>
			<compilerarg line="${compilerArg}" compiler="${build.compiler}"/>
			<classpath refid="pmd-core.jar.classpath" />
			<src path="src/"			/>
			<compilerarg value="@${basedir}/javaCompiler.pmd-core.jar.args" compiler="org.eclipse.jdt.core.JDTCompilerAdapter"/>
			<compilerarg line="-log '${temp.folder}/pmd-core.jar.bin${logExtension}'" compiler="org.eclipse.jdt.core.JDTCompilerAdapter"/>
		</javac>
		<!-- Copy necessary resources -->
		<copy todir="${temp.folder}/pmd-core.jar.bin" failonerror="true" overwrite="false">
			<fileset dir="src/">
				<exclude name="**/*.java"/>
				<exclude name="**/package.htm*"/>
			</fileset>
		</copy>
		<mkdir dir="${build.result.folder}"/>
		<jar destfile="${build.result.folder}/pmd-core.jar" basedir="${temp.folder}/pmd-core.jar.bin"/>
		<delete dir="${temp.folder}/pmd-core.jar.bin"/>
	</target>

	<target name="pmd-coresrc.zip" depends="init" unless="pmd-coresrc.zip">
		<mkdir dir="${build.result.folder}"/>
		<antcall target="zip.pmd-coresrc.zip"/>
	</target>
	<target name="zip.pmd-coresrc.zip">
		<zip destfile="${build.result.folder}/pmd-coresrc.zip" filesonly="false" whenempty="skip" update="false">
			<fileset dir="src/">
				<include name="**/*.java"/>
			</fileset>
		</zip>
	</target>
	<target name="copy.pmd-coresrc.zip">
		<copy todir="${source.destination.folder}/pmd-coresrc" failonerror="true" overwrite="true">
			<fileset dir="src/">
				<include name="**/*.java"/>
			</fileset>
		</copy>
	</target>

	<target name="build.jars" depends="init" description="Compile classes and build nested jars for the plug-in: net.sourceforge.pmd.core.">
		<available property="pmd-core.jar" file="${build.result.folder}/pmd-core.jar"/>
		<antcall target="pmd-core.jar"/>
	</target>

	<target name="build.sources" depends="init">
		<available property="pmd-coresrc.zip" file="${build.result.folder}/pmd-coresrc.zip"/>
		<antcall target="pmd-coresrc.zip"/>
	</target>

	<target name="gather.bin.parts" depends="init" if="destination.temp.folder">
		<mkdir dir="${destination.temp.folder}/net.sourceforge.pmd.core_4.2.3.v200809021135"/>
		<copy todir="${destination.temp.folder}/net.sourceforge.pmd.core_4.2.3.v200809021135" failonerror="true" overwrite="false">
			<fileset dir="${build.result.folder}">
				<include name="pmd-core.jar"/>
			</fileset>
		</copy>
		<copy todir="${destination.temp.folder}/net.sourceforge.pmd.core_4.2.3.v200809021135" failonerror="true" overwrite="false">
			<fileset dir="${basedir}">
				<include name="plugin.xml"/>
				<include name="toc.xml"/>
				<include name="doc.zip"/>
				<include name="schema/"/>
				<include name="lib/"/>
				<include name="pmd-core.jar"/>
				<include name="lib/pmd14-4.2.3.jar"/>
				<include name="lib/retroweaver-rt-2.0.5.jar"/>
				<include name="lib/asm-3.1.jar"/>
				<include name="lib/jaxen-1.1.1.jar"/>
				<include name="lib/junit.jar"/>
				<include name="lib/backport-util-concurrent.jar"/>
			</fileset>
		</copy>
	</target>

	<target name="build.zips" depends="init">
	</target>

	<target name="gather.sources" depends="init" if="destination.temp.folder">
		<mkdir dir="${destination.temp.folder}/net.sourceforge.pmd.core_4.2.3.v200809021135"/>
		<copy file="${build.result.folder}/pmd-coresrc.zip" todir="${destination.temp.folder}/net.sourceforge.pmd.core_4.2.3.v200809021135" failonerror="false" overwrite="false"/>
		<antcall target="copy.src.includes">
			<param name="source.destination.folder" value="${destination.temp.folder}/net.sourceforge.pmd.core_4.2.3.v200809021135"/>
		</antcall>
	</target>

	<target name="gather.individual.sources" depends="init">
		<antcall target="copy.pmd-coresrc.zip">
			<param name="source.destination.folder" value="${destination.temp.folder}"/>
		</antcall>
		<antcall target="copy.src.includes">
			<param name="source.destination.folder" value="${destination.temp.folder}"/>
		</antcall>
	</target>

	<target name="copy.src.includes" depends="init">
		<copy todir="${source.destination.folder}" failonerror="false" overwrite="false">
			<fileset dir="${basedir}">
				<include name="plugin.xml"/>
				<include name="schema/"/>
				<include name="toc.xml"/>
			</fileset>
		</copy>
	</target>

	<target name="gather.logs" depends="init" if="destination.temp.folder">
		<mkdir dir="${destination.temp.folder}/net.sourceforge.pmd.core_4.2.3.v200809021135"/>
		<copy todir="${destination.temp.folder}/net.sourceforge.pmd.core_4.2.3.v200809021135" failonerror="false" overwrite="false">
			<fileset dir="${temp.folder}">
				<include name="pmd-core.jar.bin${logExtension}"/>
			</fileset>
		</copy>
	</target>

	<target name="clean" depends="init" description="Clean the plug-in: net.sourceforge.pmd.core of all the zips, jars and logs created.">
		<delete file="${build.result.folder}/pmd-core.jar"/>
		<delete file="${build.result.folder}/pmd-coresrc.zip"/>
		<delete file="${plugin.destination}/net.sourceforge.pmd.core_4.2.3.v200809021135.jar"/>
		<delete file="${plugin.destination}/net.sourceforge.pmd.core_4.2.3.v200809021135.zip"/>
		<delete dir="${temp.folder}"/>
	</target>

	<target name="refresh" depends="init" if="eclipse.running" description="Refresh this folder.">
		<eclipse.convertPath fileSystemPath="/home/xlv/dev/pmd/all/pmd-eclipse-plugin/pmd-eclipse-pmd" property="resourcePath"/>
		<eclipse.refreshLocal resource="${resourcePath}" depth="infinite"/>
	</target>

	<target name="zip.plugin" depends="init" description="Create a zip containing all the elements for the plug-in: net.sourceforge.pmd.core.">
		<delete dir="${temp.folder}"/>
		<mkdir dir="${temp.folder}"/>
		<antcall target="build.jars"/>
		<antcall target="build.sources"/>
		<antcall target="gather.bin.parts">
			<param name="destination.temp.folder" value="${temp.folder}/"/>
		</antcall>
		<antcall target="gather.sources">
			<param name="destination.temp.folder" value="${temp.folder}/"/>
		</antcall>
		<delete>
			<fileset dir="${temp.folder}">
				<include name="**/*.bin${logExtension}"/>
			</fileset>
		</delete>
		<zip destfile="${plugin.destination}/net.sourceforge.pmd.core_4.2.3.v200809021135.zip" basedir="${temp.folder}" filesonly="true" whenempty="skip" update="false"/>
		<delete dir="${temp.folder}"/>
	</target>

</project>
